pre_build() {
	mkdir -p ${DESTDIR}/usr/share/terminfo
}

pre_install() {
	export TERMINFO=${DESTDIR}/usr/share/terminfo
}

post_install() {
	vdoc README
	vdoc FAQ
	vlicense LICENSE
}

st-terminfo_package() {
	short_desc+=" - terminfo data"
	pkg_install() {
		vmove usr/share/terminfo
	}
}
